<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.FruitFragment">

    <ImageView
        android:id="@+id/FruitImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/FruitNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="FruitName"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/FruitImage"
        app:layout_constraintTop_toTopOf="@+id/FruitImage" />

    <TextView
        android:id="@+id/FruitCountText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="FruitCount"
        app:layout_constraintBottom_toBottomOf="@+id/FruitImage"
        app:layout_constraintEnd_toEndOf="@+id/FruitDateText"
        app:layout_constraintStart_toStartOf="@+id/FruitNameText"
        app:layout_constraintTop_toBottomOf="@+id/FruitNameText" />

    <TextView
        android:id="@+id/FruitDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="FruitDate"
        app:layout_constraintBottom_toBottomOf="@+id/FruitNameText"
        app:layout_constraintStart_toEndOf="@+id/FruitNameText" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/FruitImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/FruitCountText"
        app:layout_constraintTop_toTopOf="@+id/FruitImage" />

</androidx.constraintlayout.widget.ConstraintLayout>